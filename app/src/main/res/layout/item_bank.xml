<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/item_card_bank_padding_left_right"
    android:paddingTop="@dimen/item_card_bank_padding_top"
    android:paddingRight="@dimen/item_card_bank_padding_left_right">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardBank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="@dimen/item_card_bank_content_padding">

            <ImageView
                android:id="@+id/imgBankLogo"
                android:layout_width="@dimen/item_card_bank_logo_width_height"
                android:layout_height="@dimen/item_card_bank_logo_width_height"
                android:layout_marginRight="@dimen/item_card_bank_logo_margin_right" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvInterestRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/content_highlight_text_size"
                    tools:text="Interest: 10%" />

                <TextView
                    android:id="@+id/tvMaxAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/item_card_bank_content_line_spacing"
                    android:textSize="@dimen/content_highlight_text_size"

                    tools:text="Max: 5000 million" />

                <TextView
                    android:id="@+id/tvMaxTenor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/item_card_bank_content_line_spacing"
                    android:textSize="@dimen/content_highlight_text_size"
                    tools:text="Max tenor: 30 years" />

                <TextView
                    android:id="@+id/tvMinAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/item_card_bank_content_line_spacing"
                    android:textSize="@dimen/content_normal_text_size"
                    tools:text="Min: 100 million" />

                <TextView
                    android:id="@+id/tvMinTenor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/item_card_bank_content_line_spacing"
                    android:textSize="@dimen/content_normal_text_size"
                    tools:text="Min tenor: 12 months" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>